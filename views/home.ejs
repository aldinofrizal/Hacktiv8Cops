<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    
    <title>Hacktiv8Cops</title>
    <style>
      tr{
        padding: 10px;
      }
      td{
        text-align: center;
        padding: 10px;
      }
      p{
          margin: 0;
      }
      .gm-style-iw{
          height: 1000px !important;
          width: 300px;
      }
    </style>
  </head>
  <body>
      <div id="map"  style="height: 50%; width: 100%"></div>

    <div id="rows" data-rows=<%= encodeURI(JSON.stringify(rows)) %> </div>
      <div id="list-crime">
        <table>
          <tr>
            <th>
              Option
            </th>
            <th>
              Category
            </th>
            <th>
              Victim
            </th>
            <th>Status</th>
            <th>Description</th>
            <th>Time</th>
            <th>Button</th>
          </tr>
          <% rows.forEach((x,index) => { %>
            <tr>
              <td>
                <a href="/edit/<%= x.id %>">Edit</a>
              </td>
              <td>
                <%= x.dataValues.Category.name %>
              </td>
              <td>
                <%= x.victim %>
              </td>
              <td>
                <%= x.status %>
              </td>
              <td>
                <%= x.description %>
              </td>
              <td>
                <%= x.createdAt %>
              </td>
              <td>
                <button onclick="initMap(<%=x.latitude%>,<%=x.longitude%>,18)">Click</button>
              </td>
            </tr>
            <br/>
          <% }) %>
        </table>
          <% encodeURI(JSON.stringify(rows)) %>
      </div>
    <div id="avg" data-avg=<%= encodeURI(JSON.stringify(avg)) %> </div>


    <div id="links">
        <a href="/crime/police-register">register</a>
        <a href="/add">add crime</a>
    </div>

    <script>

        const data = document.getElementById('rows').dataset.rows
        const coords = JSON.parse(decodeURI(data))
        
        const avgURI = document.getElementById('avg').dataset.avg
        const avg = JSON.parse(decodeURI(avgURI))
    
        
        var map;
        function initMap(x = Number(avg.latsAvg), y = Number(avg.longsAvg),z=12) {
          
              var myLatLng = { lat: x , lng: y };
              var map = new google.maps.Map(document.getElementById("map"), {
                  zoom: z,
                center: myLatLng
            });
            
            let marker;
            


              coords.forEach((element, index) => {
                let url = "http://maps.google.com/mapfiles/ms/icons/";
                if(element.status === "unsolved"){
                  url += "red" + "-dot.png";
                }else if(element.status === "solved"){
                  url += "green" + "-dot.png";
                }
                marker = new google.maps.Marker({
                position : new google.maps.LatLng( element.latitude ,  element.longitude),
                map : map,
                icon: {
                  url:url
                }
              }) 
                
                let infoWindow = new google.maps.InfoWindow({
                    content : 
                    `<p><b>` + element.Category.name + `</b></p>` +
                    `<p>Victim :<b>`+ element.victim +`</b></p>` +
                    `<p>Description :`+ element.description +`</p>` +
                    `<p>`+ Date(element.createdAt).slice(0,24) +`</p>` +
                    `<p>Status :` + element.status + `</p>` 
                    
                })

                marker.addListener('click', function() {
                    infoWindow.open(map, marker)
                })


              });
            }
    </script>
<script
src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBLTqWECu-KGCj3sjk3qPuAaPM9P0hyhOg&callback=initMap"
async
defer
></script>

   

  </body>
</html>
